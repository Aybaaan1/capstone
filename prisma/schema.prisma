generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   Int          @id @default(autoincrement())
  email                String       @unique
  idnumber             String       @unique
  firstname            String
  lastname             String
  program              String
  password             String
  role                 Role         @default(STUDENT)
  image                String?
  resetPasswordExpires DateTime?
  resetPasswordToken   String?
  assistances          Assistance[]
  items                Item[]
  orders               Order[]
  reserves             Reserve[]
}

model Merch {
  id     Int     @id @default(autoincrement())
  name   String
  price  Float
  image  String?
  stocks Int
  type   String
  size   String?
  orders Order[]
}

model Order {
  id       Int     @id @default(autoincrement())
  userId   Int
  merchId  Int
  proof    String?
  status   String?
  quantity Int     @default(1)
  size     String?
  merch    Merch   @relation(fields: [merchId], references: [id])
  user     User    @relation(fields: [userId], references: [id])
}

model Item {
  id       Int      @id @default(autoincrement())
  userId   Int
  name     String
  place    String
  dateTime DateTime
  image    String?
  type     String
  status   String
  user     User     @relation(fields: [userId], references: [id])
}

model ItemReservation {
  id     Int       @id @default(autoincrement())
  image  String?
  type   String
  status String
  res    Reserve[]
}

model Reserve {
  id              Int             @id @default(autoincrement())
  itemId          Int
  userId          Int
  reserveDateTime DateTime
  returnDateTime  DateTime
  purpose         String
  status          String          @default("pending")
  item            ItemReservation @relation(fields: [itemId], references: [id])
  user            User            @relation(fields: [userId], references: [id])
}

model Assistance {
  id       Int      @id @default(autoincrement())
  userId   Int
  name     String
  patience String
  dateTime DateTime
  gcash    String
  proof    String?
  status   String
  reason   String?
  user     User     @relation(fields: [userId], references: [id])
}

enum Role {
  STUDENT
  ADMIN
}
